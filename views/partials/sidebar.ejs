<div class="bg-white w-64 h-screen shadow-lg fixed left-0 top-0">
    <!-- Logo and Brand -->
    <div class="p-4 border-b flex items-center space-x-3">
        <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center">
            <i class="fas fa-comments text-white text-xl"></i>
        </div>
        <h2 class="text-xl font-bold bg-gradient-to-r from-blue-500 to-indigo-500 bg-clip-text text-transparent">ChatApp</h2>
    </div>

    <!-- Navigation Menu -->
    <div class="p-4">
        <nav class="space-y-2">
            <a href="/chat" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-100 transition-colors <%= path === '/chat' ? 'bg-blue-50 text-blue-600' : 'text-gray-700' %>">
                <i class="fas fa-home"></i>
                <span>Dashboard</span>
            </a>
            
            <a href="/chat/direct" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-100 transition-colors <%= path.startsWith('/chat/direct') ? 'bg-blue-50 text-blue-600' : 'text-gray-700' %>">
                <i class="fas fa-user-friends"></i>
                <span>Direct Messages</span>
            </a>
            
            <a href="/chat/groups" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-100 transition-colors <%= path.startsWith('/chat/groups') ? 'bg-blue-50 text-blue-600' : 'text-gray-700' %>">
                <i class="fas fa-users"></i>
                <span>Group Chats</span>
            </a>
            
            <a href="/profile" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-100 transition-colors <%= path === '/profile' ? 'bg-blue-50 text-blue-600' : 'text-gray-700' %>">
                <i class="fas fa-user-circle"></i>
                <span>Profile</span>
            </a>
        </nav>
    </div>

    <!-- User Profile Section -->
    <div class="absolute bottom-0 w-full p-4 border-t bg-gray-50">
        <div class="flex items-center space-x-3">
            <img src="<%= user.avatar %>" alt="Profile" class="w-10 h-10 rounded-full border-2 border-gray-200">
            <div class="flex-1">
                <p class="text-sm font-medium text-gray-900"><%= user.username %></p>
                <p class="text-xs text-gray-500">Online</p>
            </div>
            <div class="dropdown relative">
                <button class="p-1 hover:bg-gray-200 rounded-full">
                    <i class="fas fa-ellipsis-v text-gray-600"></i>
                </button>
                <div class="dropdown-menu hidden absolute bottom-full right-0 mb-2 w-48 bg-white rounded-lg shadow-lg border">
                    <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                        Settings
                    </a>
                    <a href="/auth/logout" class="block px-4 py-2 text-sm text-red-600 hover:bg-gray-100">
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>