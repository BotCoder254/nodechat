<div class="max-w-2xl mx-auto mt-8"></div>
<div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-2xl font-bold mb-6">Create New Chat</h2>

    <form action="/chat/create" method="POST">
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2">
                    Chat Type
                </label>
            <div class="mt-2">
                <label class="inline-flex items-center">
                        <input type="radio" name="type" value="direct" class="form-radio" checked>
                        <span class="ml-2">Direct Message</span>
                    </label>
                <label class="inline-flex items-center ml-6">
                        <input type="radio" name="type" value="group" class="form-radio">
                        <span class="ml-2">Group Chat</span>
                    </label>
            </div>
        </div>

        <div id="group-name-field" class="mb-6 hidden">
            <label for="name" class="block text-gray-700 text-sm font-bold mb-2">
                    Group Name
                </label>
            <input type="text" id="name" name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>

        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2">
                    Select Participants
                </label>
            <select name="participants" multiple class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    <% users.forEach(user => { %>
                        <option value="<%= user._id %>"><%= user.username %></option>
                    <% }); %>
                </select>
        </div>

        <div class="flex items-center justify-end">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Create Chat
                </button>
        </div>
    </form>
</div>
</div>